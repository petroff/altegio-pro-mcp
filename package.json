{
  "name": "@altegio/mcp-server-pro",
  "version": "1.0.0",
  "description": "Professional B2B MCP (Model Context Protocol) server for Altegio.Pro business management and admin operations",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "altegio",
    "altegio-pro",
    "b2b",
    "business-management",
    "salon-management",
    "admin",
    "booking",
    "api",
    "ai",
    "llm",
    "claude"
  ],
  "homepage": "https://github.com/petroff/altegio-pro-mcp#readme",
  "bugs": {
    "url": "https://github.com/petroff/altegio-pro-mcp/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petroff/altegio-pro-mcp.git"
  },
  "license": "MIT",
  "author": {
    "name": "Yuri Petrov",
    "email": "y.petrov@yclients.tech"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "altegio-mcp": "./dist/index.js",
    "altegio-mcp-http": "./dist/http-server.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/http-server.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm run test",
    "release": "semantic-release"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
